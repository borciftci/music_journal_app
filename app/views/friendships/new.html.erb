<div class="flex-col">
  <h1 class="text-2xl font-bold mb-4">Send a Friend Request</h1>

  <%= form_with url: friendships_path, method: :post do |f| %>
    <div class="mb-4">
      <%= f.label :email, "Enter friend's email:", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :email, name: "email", class: "border-2 border-gray-300 rounded p-2 w-full
                                        focus:outline-none focus:border-blue-500" %>
    </div>
    <%= f.submit "Send Request", class: "bg-emerald-600 hover:bg-emerald-900 text-white font-bold py-2 px-4 rounded" %>
  <% end %>

  <!-- Back Button -->
  <%= link_to "Back to Friends", friends_path, class: "mt-4 text-cyan-600 hover:underline block" %>
</div>

<% if flash[:alert] %>
  <div class="bg-red-200 text-red-700 p-4 rounded-md mb-4">
    <p><%= flash[:alert] %></p>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="bg-green-200 text-green-700 p-4 rounded-md mb-4">
    <p><%= flash[:notice] %></p>
  </div>
<% end %>

